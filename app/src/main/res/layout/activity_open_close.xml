<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context="com.uniubi.uface.ether.activity.outdevice.OpenCloseActivity">

    <Button
        android:id="@+id/btn_open_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="打开继电器"/>

    <Button
        android:id="@+id/btn_open_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="打开LED灯"/>

    <Button
        android:id="@+id/btn_close_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_open_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="关闭继电器"/>

    <Button
        android:id="@+id/btn_close_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_close_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="关闭LED灯"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_close_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="返回上一层"/>
</RelativeLayout>
